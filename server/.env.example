# PostgreSQL connection URL
# Example: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/chat_lite_db?schema=public"

# A long, random, secret string for signing JWT tokens
JWT_SECRET="your_super_secret_jwt_string_at_least_32_characters_long"

# The port the backend server will run on
PORT=4000

# The origin URL of your frontend application for CORS
CORS_ORIGIN="http://localhost:5173"

# --- Push Notifications (VAPID Keys) ---
# Generate these with the command: npx web-push generate-vapid-keys
# The subject should be a mailto: or https: URL for contact purposes
VAPID_SUBJECT="mailto:your-email@example.com"
VAPID_PUBLIC_KEY="<Your VAPID Public Key>"
VAPID_PRIVATE_KEY="<Your VAPID Private Key>"

# --- Optional ---

# Environment: 'development' or 'production'
NODE_ENV="development"

# A secret for miscellaneous app functions, should be a long random string
# Used by the crypto worker on the client.
CHAT_SECRET="your_super_secret_chat_string"

# Redis URL for session/presence management
# REDIS_URL="redis://localhost:6379"

# Local directory for file uploads.
# UPLOAD_DIR="uploads"
